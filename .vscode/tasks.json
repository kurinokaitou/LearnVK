{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cmake debug",
			"group": "build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"build/debug",
				"-G",
				"Unix Makefiles",
				"-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
				"-DCMAKE_BUILD_TYPE=Debug"
			],
			"detail": "cmake debug configuration",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "cmake release",
			"group": "build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"build/release",
				"-G",
				"Unix Makefiles",
				"-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
				"-DCMAKE_BUILD_TYPE=Release"
			],
			"detail": "cmake release configuration",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "build",
			"group": "build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build/debug",
				"-j6"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "build project",
			"dependsOn": [
				"cmake debug"
			]
		},
		{
			"type": "cmake",
			"label": "clean",
			"command": "clean",
			"problemMatcher": [],
			"detail": "cmake clean task"
		}
	]
}